{
  "compilerOptions": {
    "rootDir": "./src",

    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",

    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": false,
    "forceConsistentCasingInFileNames": true
  }
}
